
form.form-inline
  .form-group
    input.form-control.input-sm.col(type="search",placeholder="Enter keyword(s)", ng-model="model.searchFor")
  button.btn.btn-primary(ng-click="search()")
    |Search
  button.btn.newButton(ng-click="edit(0)") Create New Project
  
  img(ng-show="model.isLoading" src="/images/loading.gif")
  .container.noresults.alert.alert-info(ng-show="model.results.length==0 && hasSearched")
    No results found
  .container.results(ng-show="model.results.length>0")
    div.row(ng-repeat="item in model.results")
      div.result.col-md-8.panel.panel-primary
        div.panel-heading
          div.panel-title
            {{item.name}}	
        div.panel-body
          h4 {{item.srcLocation}}
          {{item.description}}
          br
        button.btn.editButton(ng-click="edit(item._id)") Edit

